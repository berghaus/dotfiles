#
# .alias
#

#use nice looking xterm and rxvt:
alias xterm='xterm -bg black -fg white -cr white'

#Generic Aliases:
alias cp='cp -rv'
alias die='kill -1 -9'
alias rm='rm -i'
alias rr='rm -rv'
alias scp='scp -r'
alias dir='ls -lh'
alias e='emacs -nw'
alias xe='xemacs'
alias purge='rm -v *~ *.o *.out'
alias gv='ghostview'
alias ls='ls -G'
alias dir='ls -G1'
alias vdir='ls -Gl'
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'
alias ssh='ssh -Y -A'
alias less='less -R'

alias redisstart='sudo launchctl start io.redis.redis-server'
alias redisstop='sudo launchctl stop io.redis.redis-server'
#EOF
